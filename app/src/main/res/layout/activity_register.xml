<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            tools:context="com.zxxapp.mall.maintenance.ui.mine.child.LoginActivity">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:src="@mipmap/logo" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="装修维修，就来智修网" />

            <LinearLayout
                android:id="@+id/ll_loginbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_subtitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <EditText
                            android:id="@+id/et_username"

                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/textview_border_radius"
                            android:gravity="center_vertical"
                            android:hint="请输入您的手机号" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_send"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:background="@null"
                        android:text="发送验证码"
                        android:textColor="@color/colorTheme" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="48dp">
                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/textview_border_radius"
                        android:gravity="center_vertical"
                        android:hint="请输入您的密码"
                        android:inputType="textPassword" />
                    <View
                        android:id="@+id/viewTip"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="30dp">

                    </View>
                </RelativeLayout>

                    <EditText
                        android:id="@+id/et_val_code"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/textview_border_radius"
                        android:gravity="center_vertical"
                        android:hint="请输入您的验证码"
                        android:inputType="textPassword" />
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/agreeCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看并同意注册协议"
                        android:textColor="@color/c9"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_border_radius"
                    android:text="注册"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</layout>

